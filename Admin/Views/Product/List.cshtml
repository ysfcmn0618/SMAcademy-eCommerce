@using App.Admin.Models.ProductViewModels
@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Ürünler";
}
<h2>Ürünler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok Miktarı</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.StockAmount</td>
                <td>@(product.Enabled ? "Aktif" : "Pasif")</td>
                <td>
                    <a asp-action="Edit" asp-controller="Product" asp-route-productId="@product.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    @* <a asp-action="Details" asp-controller="Product" asp-route-productId="@product.Id" class="btn btn-info btn-sm">Detaylar</a> *@
                    <!-- Silme işlemi için ekleme -->
                    <a asp-action="Delete" asp-controller="Product" asp-route-productId="@product.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Yeni Ürün Ekle</a>