@using App.eCommerce.Models.ViewModels.AuthViewModels
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <h2>Forgot Password</h2>
    
</div>

<div class="container-fluid">
    <div class="row">
        <h2 class="col-12 text-center">Forgot Password</h2>
        <div class="col-12 col-md-6 offset-md-3">
            <form method="post" action="/forgot-password">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" data-val="true" data-val-required="Bu alan boş bırakılamaz!" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="site-btn mr-auto">Submit</button>
                    <a asp-controller="Auth" asp-action="Login" class="site-btn mr-2">Login</a>
                    <a asp-controller="Auth" asp-action="Register" class="site-btn">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

